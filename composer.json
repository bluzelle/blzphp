{
    "name": "bluzelle/blzphp",
    "type": "library",
    "description": "Php library that can be used to access the Bluzelle database service.",
    "keywords": [
        "bluzelle",
        "blzphp"
    ],
    "homepage": "https://github.com/bluzelle/blzphp",
    "license": "MIT",
    "authors": [
        {
            "name": "Mulenga Bowa",
            "email": "mulengabowa53@gmail.com",
            "homepage": "https://github.com/mul53/bluzelle-php",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "~7.2",
        "bitwasp/bech32": "^0.0.1",
        "bitwasp/bitcoin": "^1.0",
        "guzzlehttp/guzzle": "~6.0",
        "simplito/bn-php": "^1.1",
        "simplito/elliptic-php": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=8.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Bluzelle\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Bluzelle\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
